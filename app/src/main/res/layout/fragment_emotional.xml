<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EmotionalFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_emotional_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:elevation="2dp"
        android:text="Pesquisa"
        android:textColor="#F8F8F8"

        android:textSize="28sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_emotional_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:elevation="2dp"
        tools:text="Humor diário"
        android:textColor="#F8F8F8"
        android:textSize="28sp"

        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@id/fg_emotional_title"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_smile"

        android:elevation="2dp"

        app:layout_constraintBottom_toBottomOf="@id/fg_emotional_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fg_emotional_title" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fg_emotional_background_top"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bc_home"
        android:elevation="1dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_emotional_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/bc_counter"

        android:layout_marginTop="73dp"

        android:layout_marginStart="4dp"
        android:padding="3dp"

        app:layout_constraintTop_toBottomOf="@id/fg_emotional_background_top"
        app:layout_constraintStart_toStartOf="@id/fg_emotional_divider"
        tools:text="03/05/2021"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_emotional_enunciated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:textSize="16sp"
        android:textColor="#2B2B2B"

        android:layout_marginHorizontal="52dp"
        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/fg_emotional_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="Como você está se sentindo hoje?"/>

    <View
        android:id="@+id/fg_emotional_divider"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:elevation="1dp"
        android:background="#B4B4B4"

        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="36dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fg_emotional_enunciated" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="34dp"

        app:layout_constraintTop_toBottomOf="@id/fg_emotional_divider"
        app:layout_constraintStart_toStartOf="@id/fg_emotional_divider"
        app:layout_constraintEnd_toEndOf="@id/fg_emotional_divider">

        <LinearLayout
            android:id="@+id/fg_emotional_emoticon_very_sad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fg_emotional_emoticon_sad"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fg_emotional_emoticon_very_sad_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_emoticon_very_sad_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fg_emotional_emoticon_very_sad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="12sp"
                android:text="Muito ruim"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_emotional_emoticon_sad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toEndOf="@id/fg_emotional_emoticon_very_sad"
            app:layout_constraintEnd_toStartOf="@id/fg_emotional_emoticon_neutral"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fg_emotional_emoticon_sad_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_emoticon_sad_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fg_emotional_emoticon_sad_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="12sp"
                android:text="Ruim"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_emotional_emoticon_neutral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toEndOf="@id/fg_emotional_emoticon_sad"
            app:layout_constraintEnd_toStartOf="@id/fg_emotional_emoticon_happy"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fg_emotional_emoticon_neutral_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_emoticon_neutral_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fg_emotional_emoticon_neutral_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="12sp"
                android:text="Normal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_emotional_emoticon_happy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toEndOf="@id/fg_emotional_emoticon_neutral"
            app:layout_constraintEnd_toStartOf="@id/fg_emotional_emoticon_very_happy"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fg_emotional_emoticon_happy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_emoticon_happy_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fg_emotional_emoticon_happy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="12sp"
                android:text="Bom"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_emotional_emoticon_very_happy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintStart_toEndOf="@id/fg_emotional_emoticon_happy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fg_emotional_emoticon_very_happy_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_emoticon_very_happy_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/fg_emotional_emoticon_very_happy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#434343"
                android:textSize="12sp"
                android:text="Muito bom"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fg_emotional_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="40dp"
        app:cornerRadius="8dp"
        android:text="Enviar"
        android:backgroundTint="@color/blue_navBar_main"

        app:icon="@drawable/ic_send"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>