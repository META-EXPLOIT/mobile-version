<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SingUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fg_sing_up_button_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_sing_up"
            android:visibility="gone"

            android:layout_marginStart="24dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fg_singup_progress_bar_sing_up"
            app:layout_constraintBottom_toBottomOf="@id/fg_singup_progress_bar_sing_up"
            app:layout_constraintEnd_toStartOf="@id/fg_singup_progress_bar_sing_up"/>

        <ProgressBar
            android:id="@+id/fg_singup_progress_bar_sing_up"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="13dp"

            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"

            android:progress="15"
            android:progressTint="#1362FF"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/fg_sing_up_button_back"
            />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fg_singup"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:defaultNavHost="true"
            app:navGraph="@navigation/singup_graph"

            app:layout_constraintTop_toBottomOf="@id/fg_singup_progress_bar_sing_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fg_singup_user_btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="PrÃ³ximo"

            android:backgroundTint="#1362FF"

            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="10dp"

            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="40dp"

            app:layout_constraintTop_toBottomOf="@id/fg_singup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>