<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBarSingUp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="312dp"
            android:layout_height="13dp"

            android:layout_marginTop="8dp"

            android:progress="15"
            android:progressTint="#1362FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fg_singup"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:defaultNavHost="true"
            app:navGraph="@navigation/singup_graph"

            app:layout_constraintTop_toBottomOf="@id/progressBarSingUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
             />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sing_up_btn_next2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="PrÃ³ximo"

            android:backgroundTint="#1362FF"

            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="10dp"

            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="40dp"

            app:layout_constraintTop_toBottomOf="@id/fg_singup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>