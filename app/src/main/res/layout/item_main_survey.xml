<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fg_main_constraint_layout_daily">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_main_recyclerview_surveys_items_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pesquisas diÃ¡rias"
        android:textColor="#2B2B2B"
        android:textStyle="bold"
        android:textSize="16sp"

        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fg_main_recyclerview_surveys_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"

        tools:listitem="@layout/item_main_survey_item"

        app:layout_constraintTop_toBottomOf="@id/fg_main_recyclerview_surveys_items_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>