<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEnterpriseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fg_update_enterprise_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:elevation="1dp"

            android:layout_marginStart="34dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fg_update_enterprise_title"
            app:layout_constraintBottom_toBottomOf="@id/fg_update_enterprise_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fg_update_enterprise_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="Alterar dados"
            android:textColor="#F8F8F8"

            android:layout_marginTop="53dp"
            android:layout_marginStart="24dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/fg_update_enterprise_back"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:background="@drawable/ic_smile"

            android:layout_marginTop="64dp"
            android:layout_marginEnd="24dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/fg_update_enterprise_background_top"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bc_home"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fg_update_enterprise_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#212529"
            android:layout_marginTop="20dp"

            android:text="Empresa"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_background_top" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fg_update_enterprise_edt_enterprise"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"

            android:layout_height="44dp"
            app:endIconMode="dropdown_menu"

            app:boxStrokeColor="#1362FF"
            app:boxStrokeWidth="1dp"

            app:hintEnabled="false"

            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"

            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_label_name">

            <AutoCompleteTextView
                android:id="@+id/fg_update_enterprise_edt_enterprise_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select"
                android:textColorHint="#2B2B2B"
                android:inputType="none"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fg_update_enterprise_label_occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#212529"
            android:layout_marginTop="20dp"

            android:text="Área de atuação"
            app:layout_constraintStart_toStartOf="@id/fg_update_enterprise_label_name"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_edt_enterprise" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fg_update_enterprise_edt_occupation"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"

            android:layout_height="44dp"
            app:endIconMode="dropdown_menu"

            app:boxStrokeColor="#1362FF"
            app:boxStrokeWidth="1dp"

            app:hintEnabled="false"

            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"

            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_label_occupation">

            <AutoCompleteTextView
                android:id="@+id/fg_update_enterprise_edt_occupation_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select"
                android:textColorHint="#2B2B2B"
                android:inputType="none"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fg_update_enterprise_label_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#212529"
            android:layout_marginTop="20dp"

            android:text="Cargo"
            app:layout_constraintStart_toStartOf="@id/fg_update_enterprise_label_name"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_edt_occupation" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fg_update_enterprise_edt_office"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"

            android:layout_height="44dp"
            app:endIconMode="dropdown_menu"

            app:boxStrokeColor="#1362FF"
            app:boxStrokeWidth="1dp"

            app:hintEnabled="false"

            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"

            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_label_office">

            <AutoCompleteTextView
                android:id="@+id/fg_update_enterprise_edt_office_autocomplete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/select"
                android:textColorHint="#2B2B2B"
                android:inputType="none"
                android:paddingHorizontal="16dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fg_update_enterprise_btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Atualizar"

            android:backgroundTint="#1362FF"

            app:cornerRadius="12dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:padding="10dp"

            android:layout_marginTop="63dp"
            android:layout_marginHorizontal="110dp"
            android:layout_marginBottom="40dp"

            app:layout_constraintTop_toBottomOf="@id/fg_update_enterprise_edt_office"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>