<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.singup.SingUpPart3Fragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fg_sing_up_3_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@drawable/ic_back_sing_up"
        android:visibility="visible"

        android:layout_marginStart="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fg_sing_up_3_progressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_progressbar_3"

        android:layout_marginEnd="24dp"
        android:layout_marginStart="8dp"

        app:layout_constraintStart_toEndOf="@id/fg_sing_up_3_button_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fg_sing_up_3_button_back"
        app:layout_constraintBottom_toBottomOf="@id/fg_sing_up_3_button_back"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_sing_up_1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:text="E-mail"
        android:textColor="#1C1C1C"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fg_sing_up_3_button_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_sing_up_1_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20.8dp"
        android:layout_marginTop="8dp"

        android:lineHeight="24dp"

        android:paddingHorizontal="3.2dp"
        android:text="Não se preocupe! Prometemos enviar apenas informações importantes via e-mail. "
        android:textColor="#434343"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fg_sing_up_1_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/fg_update_user_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:text="@string/email"

        android:textColor="#212529"
        app:layout_constraintStart_toStartOf="@id/fg_sing_up_1_description"
        app:layout_constraintTop_toBottomOf="@id/fg_sing_up_1_description" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fg_sing_up_3_edt_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:layout_marginTop="8dp"
        android:elevation="16dp"

        android:shadowColor="#400F161E"
        app:boxCornerRadiusBottomEnd="16dp"

        app:boxCornerRadiusBottomStart="16dp"

        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="#1362FF"
        app:boxStrokeWidth="1dp"

        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/fg_sing_up_1_description"
        app:layout_constraintStart_toStartOf="@id/fg_sing_up_1_description"
        app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_name">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:textColorHint="#2B2B2B"
            android:textCursorDrawable="?attr/boxStrokeColor"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fg_sing_up_3_btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Próximo"

        android:backgroundTint="#1362FF"

        app:cornerRadius="12dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="10dp"

        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="35dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>