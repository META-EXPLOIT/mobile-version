<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUserFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/fg_update_user_back"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/ic_back"
           android:elevation="1dp"

           android:layout_marginStart="34dp"

           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="@id/fg_update_user_title"
           app:layout_constraintBottom_toBottomOf="@id/fg_update_user_title"/>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:elevation="1dp"
           android:textSize="28sp"
           android:textStyle="bold"
           android:text="Alterar dados"
           android:textColor="#F8F8F8"

           android:layout_marginTop="53dp"
           android:layout_marginStart="24dp"

           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toEndOf="@id/fg_update_user_back"/>

       <androidx.appcompat.widget.AppCompatImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:elevation="1dp"
           android:background="@drawable/ic_smile"

           android:layout_marginTop="64dp"
           android:layout_marginEnd="24dp"

           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

       <androidx.appcompat.widget.AppCompatImageView
           android:id="@+id/fg_update_user_background_top"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:background="@drawable/bc_home"

           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:layout_marginTop="20dp"
           android:layout_marginStart="24dp"
           android:text="Nome"

           android:textColor="#212529"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_background_top" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_email"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="0dp"
           android:layout_height="44dp"

           android:layout_marginTop="8dp"
           android:elevation="16dp"

           android:shadowColor="#400F161E"
           app:boxCornerRadiusBottomEnd="16dp"

           app:boxCornerRadiusBottomStart="16dp"

           app:boxCornerRadiusTopEnd="16dp"
           app:boxCornerRadiusTopStart="16dp"
           app:boxStrokeColor="#1362FF"
           app:boxStrokeWidth="1dp"

           android:layout_marginStart="24dp"
           android:layout_marginEnd="24dp"

           app:hintEnabled="false"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_name">

           <AutoCompleteTextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="textPersonName"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B"
               android:textCursorDrawable="?attr/boxStrokeColor"
               android:textSize="18sp" />
       </com.google.android.material.textfield.TextInputLayout>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_color"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"

           android:text="Cor e/ou raça"
           android:textColor="#212529"

           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_email"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_email" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_enterprise"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="0dp"

           android:layout_height="44dp"
           android:layout_marginTop="8dp"
           app:boxCornerRadiusBottomEnd="16dp"

           app:boxCornerRadiusBottomStart="16dp"
           app:boxCornerRadiusTopEnd="16dp"

           app:boxCornerRadiusTopStart="16dp"

           app:boxStrokeColor="#1362FF"

           app:boxStrokeWidth="1dp"
           app:endIconMode="dropdown_menu"
           app:endIconTint="#1362FF"
           app:hintEnabled="false"

           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_email"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_email"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_color">

           <AutoCompleteTextView
               android:id="@+id/fg_update_user_edt_color_autocomplete"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="@string/select"
               android:inputType="none"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B" />
       </com.google.android.material.textfield.TextInputLayout>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_sex"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"

           android:text="Gênero"
           android:textColor="#212529"

           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_enterprise"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_enterprise" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_sex"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

           android:layout_width="0dp"
           android:layout_height="44dp"
           android:layout_marginTop="8dp"

           app:boxCornerRadiusBottomEnd="16dp"
           app:boxCornerRadiusBottomStart="16dp"

           app:boxCornerRadiusTopEnd="16dp"

           app:boxCornerRadiusTopStart="16dp"

           app:boxStrokeColor="#1362FF"
           app:boxStrokeWidth="1dp"
           app:endIconMode="dropdown_menu"
           app:endIconTint="#1362FF"
           app:hintEnabled="false"

           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_email"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_email"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_sex">

           <AutoCompleteTextView
               android:id="@+id/fg_update_user_edt_sex_autocomplete"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="@string/select"
               android:inputType="none"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B" />
       </com.google.android.material.textfield.TextInputLayout>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_gender"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"

           android:text="Orientação Sexual"
           android:textColor="#212529"

           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_sex"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_sex" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_gender"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="0dp"

           android:layout_height="44dp"
           android:layout_marginTop="8dp"

           app:boxCornerRadiusBottomEnd="16dp"
           app:boxCornerRadiusBottomStart="16dp"

           app:boxCornerRadiusTopEnd="16dp"

           app:boxCornerRadiusTopStart="16dp"

           app:boxStrokeColor="#1362FF"
           app:boxStrokeWidth="1dp"
           app:endIconMode="dropdown_menu"
           app:endIconTint="#1362FF"
           app:hintEnabled="false"

           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_email"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_email"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_gender">

           <AutoCompleteTextView
               android:id="@+id/fg_update_user_edt_gender_autocomplete"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="@string/select"
               android:inputType="none"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B" />
       </com.google.android.material.textfield.TextInputLayout>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_pcd"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"

           android:text="Pessoa com deficiência (PCD)"
           android:textColor="#212529"

           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_gender"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_gender" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_pcd"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="0dp"

           android:layout_height="44dp"
           android:layout_marginTop="8dp"

           app:boxCornerRadiusBottomEnd="16dp"
           app:boxCornerRadiusBottomStart="16dp"

           app:boxCornerRadiusTopEnd="16dp"

           app:boxCornerRadiusTopStart="16dp"

           app:boxStrokeColor="#1362FF"
           app:boxStrokeWidth="1dp"
           app:endIconMode="dropdown_menu"
           app:endIconTint="#1362FF"
           app:hintEnabled="false"

           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_email"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_email"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_pcd">

           <AutoCompleteTextView
               android:id="@+id/fg_update_user_edt_pcd_autocomplete"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:hint="@string/select"
               android:inputType="none"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B" />
       </com.google.android.material.textfield.TextInputLayout>

       <LinearLayout
           android:id="@+id/fg_update_user_pcd_opt"
           android:orientation="vertical"
           android:layout_width="0dp"
           android:layout_height="wrap_content"

           android:visibility="gone"
           android:layout_marginTop="16dp"

           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_pcd"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_pcd"
           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_pcd">

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"

               android:text="Visual" />

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"
               android:text="Física" />

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"
               android:text="Auditiva" />

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"
               android:text="Intelectual" />

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"
               android:text="Psicossocial" />

           <androidx.appcompat.widget.AppCompatCheckBox
               android:id="@+id/fg_update_user_pcd_opt_6"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/blue_navBar_main"
               android:textSize="14sp"
               android:text="Reabilitado / Readaptado" />
       </LinearLayout>

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/fg_update_user_label_birthday"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="16dp"

           android:text="Data de nascimento"
           android:textColor="#212529"

           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_pcd"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_pcd_opt" />

       <com.google.android.material.textfield.TextInputLayout
           android:id="@+id/fg_update_user_edt_birthday"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="0dp"
           android:layout_height="44dp"

           android:layout_marginTop="8dp"
           app:boxCornerRadiusBottomEnd="16dp"

           app:boxCornerRadiusBottomStart="16dp"

           app:boxCornerRadiusTopEnd="16dp"

           app:boxCornerRadiusTopStart="16dp"
           app:boxStrokeColor="#1362FF"
           app:boxStrokeWidth="1dp"
           app:hintEnabled="false"

           app:layout_constraintEnd_toEndOf="@id/fg_update_user_edt_pcd"
           app:layout_constraintStart_toStartOf="@id/fg_update_user_edt_pcd"
           app:layout_constraintTop_toBottomOf="@id/fg_update_user_label_birthday">

           <AutoCompleteTextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:inputType="date"
               android:paddingHorizontal="16dp"
               android:textColorHint="#2B2B2B"
               android:textCursorDrawable="?attr/boxStrokeColor"
               android:textSize="18sp" />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.button.MaterialButton
           android:id="@+id/fg_update_user_btn_next"
           android:layout_width="0dp"
           android:layout_height="wrap_content"

           android:text="Atualizar"

           android:backgroundTint="#1362FF"

           app:cornerRadius="12dp"
           android:textSize="16sp"
           android:textAllCaps="false"
           android:textStyle="bold"
           android:padding="10dp"

           android:layout_marginTop="63dp"
           android:layout_marginHorizontal="110dp"
           android:layout_marginBottom="40dp"

           app:layout_constraintTop_toBottomOf="@id/fg_update_user_edt_birthday"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"/>

   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>