<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"

        android:layout_marginTop="48dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_label_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#2B2B2B"
        android:textSize="16sp"

        android:layout_marginTop="40dp"

        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintBottom_toTopOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="@id/edt_email"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:layout_marginHorizontal="24dp"

        app:boxStrokeColor="#1362FF"
        app:boxStrokeWidth="1dp"

        app:hintEnabled="false"

        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"

        android:layout_marginTop="8dp"

        app:layout_constraintTop_toBottomOf="@id/login_label_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textCursorDrawable="?attr/boxStrokeColor"
            android:textColorHint="#2B2B2B"
            android:paddingHorizontal="16dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_label_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"

        android:textColor="#212529"
        android:textSize="16sp"

        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edt_email"
        app:layout_constraintStart_toStartOf="@id/edt_password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:layout_marginHorizontal="24dp"

        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="12dp"

        app:boxCornerRadiusBottomStart="12dp"

        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="#1362FF"
        app:boxStrokeWidth="1dp"

        app:hintEnabled="false"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_label_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#1362FF">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textColorHint="#2B2B2B"
            android:textCursorDrawable="?attr/boxStrokeColor"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Entrar"

        android:backgroundTint="#1362FF"

        app:cornerRadius="12dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="10dp"

        android:layout_marginTop="44dp"

        app:layout_constraintTop_toBottomOf="@id/edt_password"

        app:layout_constraintStart_toStartOf="@id/edt_password"
        app:layout_constraintEnd_toEndOf="@id/edt_password"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sing_up_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_up_2"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#1362FF"

        android:layout_marginTop="42dp"

        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="@id/login_button"
        app:layout_constraintEnd_toEndOf="@id/login_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>